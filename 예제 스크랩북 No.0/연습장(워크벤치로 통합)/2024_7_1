//피라미드
#include <stdio.h>

int main(void) {
       for (i = 0; i<= 4; i++) {
              for (j=0; j<=i; j++) {
                     printf ("*");
              }
              printf (\n);
       }
        return 0;
}

int main(void) {
       for (int i=0; i<5; i++) {
              for (int j=0; 4-i>j ; j++) {
                     printf ("S")
              }
              for (int k=0; k<=i; k++) {
                     printf ("*");
              }
              printf ("\n");
       }
       return 0;
}

%d, 4-i)



